template(name='pollDisplay')
  div.col-sm-6
    h3 #{title}
    h4 #{question}
    p #{creatorName}, {{livestamp creationDate}}
    table.table.table-sm
      each withIndex answers
        tbody
          tr
            td.td-letter #{letterIndex}. 
            td #{value.text}
            td.text-right
              strong #{value.amount}

    if isActivePath '/'
      div.text-center
        button.btn.btn-default.btn-xs.vote-btn(disabled=mayNotVote)
          span.glyphicon.glyphicon-ok
          |  Vote
        button.btn.btn-default.btn-xs.edit-btn(disabled=mayNotEdit)
          span.glyphicon.glyphicon-pencil
          |  Edit
        button.btn.btn-default.btn-xs.delete-btn(disabled=mayNotEdit)
          span.glyphicon.glyphicon-trash
          |  Delete